#include <stdio.h>

int main(void) {
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int n;
	    scanf("%d",&n);
	    int a[n],b[n],i,s=0;
	    for(i=0;i<n;i++)
	    {
	        scanf("%d",&a[i]);
	    }
	    for(i=0;i<n;i++)
	    {
	        scanf("%d",&b[i]);
	    }
	    for(i=0;i<n;i++)
	    {
	        a[i]=a[i]*20-(b[i]*10);
	    }
	    for(i=0;i<n;i++)
	    {
	        if(a[i]>s)
	        {
	            s=a[i];
	        }
	    }
	    printf("%d\n",s);
	}
	return 0;
}

